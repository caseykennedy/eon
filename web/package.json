    "gatsby-plugin-theme-ui": "^0.3.3",
    "gatsby-plugin-typescript": "^2.7.0",
    "gatsby-source-filesystem": "^2.6.0",
    "gatsby-source-instagram": "^0.9.0",
    "gatsby-source-sanity": "^5.0.6",
