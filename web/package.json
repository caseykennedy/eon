    "framer-motion": "^2.9.4",
    "gatsby": "^2.27.0",
    "gatsby-image": "^2.6.0",
    "gatsby-plugin-google-gtag": "^2.4.0",
    "gatsby-plugin-google-tagmanager": "^2.11.0",
    "gatsby-plugin-loadable-components-ssr": "^2.1.0",
    "gatsby-plugin-manifest": "^2.7.0",
